<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sharekhancalc.Current_elections">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Current_elections">

        <LinearLayout
            android:id="@+id/homell"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginTop="0dp"
            android:background="@color/blue"
            android:gravity="top"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/menu"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                app:civ_border_color="#fff"
                android:scaleType="centerCrop"
                android:src="@mipmap/menu1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Vote Histoory"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/_20sdp"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_60sdp"

            android:background="@drawable/borderless_rectangale_layout"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_50sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/local"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:orientation="vertical">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="@dimen/_180sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/local"
                            app:riv_border_color="#333333"
                            app:riv_border_width="2dp"
                            app:riv_corner_radius="1dp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_25sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center_horizontal"
                            android:text="Local Elections"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/assembly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:orientation="vertical">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="@dimen/_180sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/assembly"
                            app:riv_border_color="#333333"
                            app:riv_border_width="2dp"
                            app:riv_corner_radius="1dp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center_horizontal"
                            android:text="Assembly Elections"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="20dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/parliament"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_7sdp"
                        android:orientation="vertical">

                        <com.makeramen.roundedimageview.RoundedImageView
                            android:layout_width="@dimen/_180sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:scaleType="fitCenter"
                            android:src="@mipmap/parliament"
                            app:riv_border_color="#333333"
                            app:riv_border_width="2dp"
                            app:riv_corner_radius="1dp"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center_horizontal"
                            android:text="Parliament Elections"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="@dimen/_290sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_40sdp"
                android:background="@drawable/card1"
                android:orientation="vertical"

                >

                <ImageView
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_gravity="center"
                    android:id="@+id/vote"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/vote" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_100sdp"
                    android:gravity="center"
                    android:text="Election"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:enabled="false"
                    android:gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="Date of Election : "
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <EditText
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_50sdp"
                        android:editable="false"
                        android:enabled="false"
                        android:id="@+id/date"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="Party : "
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <EditText
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:id="@+id/party"
                        android:enabled="false"
                        android:layout_marginLeft="@dimen/_100sdp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="Candidate : "
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <EditText
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:enabled="false"
                        android:id="@+id/can_name"
                        android:layout_marginLeft="@dimen/_80sdp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time of Voting  : "
                        android:textAlignment="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <EditText
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:enabled="false"
                        android:id="@+id/time"
                        android:layout_marginLeft="@dimen/_55sdp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="17dp" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/nav_drawer">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>